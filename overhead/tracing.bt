uretprobe:/home/claireh/openjdk/build/probed/jdk/lib/server/libmmtk_openjdk.so:harness_begin {
    @stats_enabled = 1;
}

uretprobe:/home/claireh/openjdk/build/probed/jdk/lib/server/libmmtk_openjdk.so:harness_end {
    @stats_enabled = 0;
